<div class="container-fluid p-2 bg-light text-dark text-left">
  <h1 class="display-1 text-center">Welcome to Walk and Watch</h1>
  <h3 class="display-6">Find a pet sittter or dog walker in your area for an affordable price.</h3>
</div>

<table class="table table-dark">

  <p>
  <%= form_tag pet_sitters_path, :method => "get" do %>
    <%= label_tag(:search, "Search our Pet sitters by name") %>
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag("Search", :name => nil)%>
  <% end %>
  </p>
  
  <thead>
    <tr>
      <th>Sitters Name</th>
      <th>Email</th>
      <th>Description</th>
      <th>Cost by day or hour</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pet_sitters.each do |pet_sitter| %>
      <tr>
        <td><%= pet_sitter.name %></td>
        <td><%= pet_sitter.email %></td>
        <td><%= pet_sitter.description %></td>
        <td><%= pet_sitter.cost %></td>
        <td><button type="button" class="btn btn-outline-info"> <a class="link-info" <%= link_to 'Show', pet_sitter %> </a></button></td>
        
        <% if user_signed_in? %>
          <td><button type="button" class="btn btn-outline-success"> <a class="link-success" <%= link_to 'Edit', edit_pet_sitter_path(pet_sitter) %> </a></button></td>
          <td><button type="button" class="btn btn-outline-danger"> <span class="sr-only"> <a class="link-danger" 
            <%= link_to 'Destroy', pet_sitter, method: :delete, data: { confirm: 'Are you sure? This action cannot be undone.' } %> </span></a></button></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<div class="container-fluid p-2 bg-light text-dark text-left">
<h3 class="display-6">Want to become a pet sitter yourself? </h3>
<button type="button" class="btn btn-success btn-lg"> <a class="link-light"<%= link_to 'Sign up here', new_pet_sitter_path %></a> </button>
</div>
